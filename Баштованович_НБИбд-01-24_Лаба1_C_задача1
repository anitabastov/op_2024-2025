#include <stdio.h> 
#include <math.h> 

int main() { 
    double a, b, h, pl; 
    printf("Введите основания a и b: "); 
    scanf("%lf %lf", &a, &b); 
    printf("Введите высоту h: "); 
    scanf("%lf", &h);  
    pl = 0.5 * (a + b) * h; 
    printf("Площадь трапеции: %.2lf\n", pl); 
 
    return 0; 
}
