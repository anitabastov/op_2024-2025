#include <stdio.h> 
#include <math.h> 
 
int main() { 
    double a, pl, Rv, Ro; 
    printf("Введите сторону треугольника a: "); 
    scanf("%lf", &a); 
    pl = (sqrt(3) / 4) * a * a; 
    Rv = a / (2 * sqrt(3)); 
    Ro = a / sqrt(3); 
    printf("Площадь: %.2lf\n", pl); 
    printf("Радиус вписанной окружности: %.2lf\n", Rv); 
    printf("Радиус описанной окружности: %.2lf\n", Ro); 
    return 0;
}
